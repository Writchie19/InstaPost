<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
              android:layout_height="wrap_content" android:orientation="vertical" android:layout_marginTop="100dp">
    <TextView
            android:text="@string/nickname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/nicknameView" android:layout_marginStart="75dp"/>
    <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp" app:srcCompat="@android:color/darker_gray"
            android:id="@+id/imageView" android:layout_marginStart="75dp"
            android:contentDescription="@string/users_post_images"/>
    <TextView
            android:text="@string/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/descriptionView" android:layout_marginStart="75dp"
            android:layout_marginEnd="115dp"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/editText2"/>
</LinearLayout>